@model BulkyBookPractice.Models.Company
@{
    @* If the model is being edited, change the title *@
    var title = "Create Company";
    @if (Model.Id != 0)
    {
        title = "Edit Company";
    }

    ViewData["Title"] = title;
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* Page Header/Title *@
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        @* Company Name Input *@
    <div class="col-8 pt-4">
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        @* Company Street Address Input *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="StreetAddress"></label>
            </div>
            <div class="col-8">
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
        </div>

        @* Company State Input *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="State"></label>
            </div>
            <div class="col-8">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        @* Company City Input *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="City"></label>
            </div>
            <div class="col-8">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        @* Company PostalCode Input *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="PostalCode"></label>
            </div>
            <div class="col-8">
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>

        @* Company Phone Number Input *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        @* Is Company Authorized CheckBox *@
        <div class="form-group row mt-2">
            <div class="col-4">
                <label asp-for="IsAuthorizedCompany"></label>
            </div>
            <div class="col-8">
                <input asp-for="IsAuthorizedCompany" />
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-8 offset-4">
                @* Create or Update Company Button*@
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}